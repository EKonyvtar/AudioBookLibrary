<android.support.v7.widget.CardView
    android:id="@+id/card_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/play_eq"
            android:layout_width="96dp"
            android:layout_height="118dp"

            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:contentDescription="@string/open_item"
            android:src="@drawable/ic_play_arrow_black_36dp"/>

        <LinearLayout
            android:id="@+id/textcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/play_eq"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="Title"
                android:singleLine="false"
                />

            <TextView
                android:id="@+id/description"
                tools:text="John Doe, his brothers, his sisters, his pets and his more than amazing band"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:singleLine="false"
                />

        </LinearLayout>

        <!-- <ImageView
            android:id="@+id/item_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/textcontent"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_download"
            android:tint="@color/media_item_icon_not_playing"
            android:layout_margin="@dimen/drawer_item_horizontal_padding"
            />
         -->

    </LinearLayout>
</android.support.v7.widget.CardView>
